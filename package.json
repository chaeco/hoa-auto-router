{
  "name": "@chaeco/hoa-auto-router",
  "version": "0.0.1",
  "description": "File-based automatic router plugin for Hoa.js framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md",
    "README-zh.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "hoa",
    "router",
    "auto-router",
    "file-based",
    "plugin"
  ],
  "author": "iptodays",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chaeco/hoa-auto-router.git"
  },
  "homepage": "https://github.com/chaeco/hoa-auto-router#readme",
  "bugs": {
    "url": "https://github.com/chaeco/hoa-auto-router/issues"
  },
  "peerDependencies": {
    "hoa": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  }
}
